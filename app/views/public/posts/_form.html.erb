<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header bg-dark text-white">
          <h4 class="px-2"><%= @post.new_record? ? "新規投稿" : "投稿編集" %></h4>
        </div>

        <div class="card-body bg-light">
          <%= render 'shared/error_messages', object: @post %>

          <%= form_with(model: @post, local: true) do |f| %>
            <div class="form-group">
              <%= f.label :title, "タイトル" %>
              <%= f.text_field :title, class: "form-control", placeholder: "投稿タイトル" %>
            </div>

            <div class="form-group">
              <%= f.label :body, "本文" %>
              <%= f.text_area :body, rows: 5, class: "form-control", placeholder: "投稿内容を入力してください" %>
            </div>

            <div class="form-group">
              <%= f.label :post_image, "投稿画像" %>
              <%= f.file_field :post_image, class: "form-control-file" %>

              <% if @post.post_image.attached? %>
                <div class="card mt-2" style="max-width: 300px;">
                  <div class="card-body p-2">
                    <p class="card-title mb-1 small text-muted">現在の画像:</p>
                    <%= image_tag @post.post_image, class: "img-fluid rounded" %>
                  </div>
                </div>
              <% end %>
            </div>

            <div class="actions mt-4 text-center">
              <%= f.submit @post.new_record? ? "投稿する" : "編集する", class: "btn btn-success btn-lg px-5" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>