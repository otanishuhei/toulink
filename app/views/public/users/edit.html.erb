<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header bg-dark text-white">
          <h4 class="px-2">プロフィール編集</h4>
        </div>

        <div class="card-body bg-light">
          <h5 class="mb-4">編集する情報を入力してください</h5>

          <%= render 'shared/error_messages', object: @user %>

          <%= form_with(model: @user, url: update_mypage_path, local: true, method: :patch) do |f| %>

            <div class="form-group">
              <%= f.label :name, "ユーザー名" %>
              <%= f.text_field :name, class:"form-control", autofocus: true, placeholder: "ユーザー名" %>
            </div>

            <div class="form-group">
              <%= f.label :introduction, "自己紹介文" %><br>
              <%= f.text_area :introduction, class:"form-control", placeholder: "自己紹介" %>
            </div>

            <div class="form-group">
              <%= f.label :profile_image, "プロフィール画像" %>
              <%= f.file_field :profile_image, class: "form-control-file" %>

              <% if @user.profile_image.attached? %>
                <div class="card mt-2" style="max-width: 200px;">
                  <div class="card-body p-2">
                    <p class="card-title mb-1 small text-muted">現在の画像:</p>
                    <%= image_tag @user.profile_image.variant(resize_to_limit: [200,200]), class: "img-fluid rounded" %>
                  </div>
                </div>
              <% end %>
            </div>

            <div class="actions mt-4 text-center">
              <%= f.submit "更新する", class: "btn btn-primary btn-lg px-5" %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="d-flex justify-content-center mt-4">
        <%= link_to "マイページへ戻る", mypage_path, class: "btn btn-secondary px-4" %>
      </div>
    </div>
  </div>
</div>
