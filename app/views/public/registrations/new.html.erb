<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header bg-dark text-white">
          <h4 class="px-2">新規会員登録</h4>
        </div>

        <div class="card-body bg-light">
          <h5 class="mb-4">
            登録情報を入力してください
          </h5>

          <%= render "public/shared/error_messages", resource: resource %>

          <%= form_with scope: resource_name, url: registration_path(resource_name), local: true do |f| %>
            <div class="form-group">
              <%= f.label :name, "ユーザー名" %>
              <%= f.text_field :name, class:"form-control", autofocus: true, placeholder: "ユーザー名" %>
            </div>
            <div class="form-group">
              <%= f.label :email, "メールアドレス" %>
              <%= f.email_field :email, class:"form-control", autocomplete: "email", placeholder: "メールアドレス" %>
            </div>
            <div class="form-group">
              <%= f.label :password, "パスワード" %>
              <% if @minimum_password_length %>
                <em class="small text-muted">(<%= @minimum_password_length %>文字以上)</em>
              <% end %>
              <%= f.password_field :password, class:"form-control", autocomplete: "new-password", placeholder: "パスワード" %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, "パスワード確認" %>
              <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password", placeholder: "パスワード再入力" %>
            </div>
            <div class="actions mt-4 text-center">
              <%= f.submit "登録する", class: "btn btn-success btn-lg px-5" %>
            </div>
          <% end %>

          <div class="text-center mt-5 d-flex flex-column align-items-center">
            <p class="border-bottom-thick-yellow mb-1">
              アカウントをお持ちの方はこちらから
            </p>
            <%= link_to "ログイン", new_user_session_path, class: "btn btn-primary px-5" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>