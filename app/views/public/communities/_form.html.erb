<div class="card-body bg-light">
  <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group mb-3">
      <%= f.label :name, "コミュニティ名" %>
      <small class="text-danger ms-2">(必須)</small>
      <%= f.text_field :name, class: "form-control", placeholder: "3文字以上50文字以内" %>
    </div>
    <div class="form-group mb-3">
      <%= f.label :description, "コミュニティの説明" %>
      <small class="text-danger ms-2">(必須)</small>
      <%= f.text_area :description, rows: 5, class: "form-control", placeholder: "活動内容、参加条件、ルールなどを入力してください" %>
    </div>
    <div class="form-group mb-3">
      <%= f.label :community_image, "コミュニティ画像" %>
      <small class="text-dark ms-2">(任意)</small>
      <%= f.file_field :community_image, class: "form-control-file" %>

      <div class="d-flex justify-content-center">
        <% if community.community_image.attached? %>
          <div class="card mt-2" style="max-width: 300px;">
            <div class="card-body p-2">
              <p class="card-title mb-1 small text-muted">現在の画像:</p>
              <%= image_tag community.community_image, class: "img-fluid rounded" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="actions mt-4 text-center">
      <%= f.submit f.object.new_record? ? "コミュニティを作成" : "コミュニティ情報を更新", class: "btn btn-success btn-lg px-5" %>
    </div>
