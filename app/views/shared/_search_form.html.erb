<%= form_with url: posts_path, method: :get, local: true, class: form_class do |f| %>
  <%= select_tag :search_type,
      options_for_select(search_options, params[:search_type]),
      class: "form-control mt-2 mt-sm-0 mr-sm-2" %>

  <%= f.search_field :query,
      placeholder: "検索内容を入力",
      class: "form-control mt-2 mt-sm-0 mr-sm-2" %>

  <%= f.submit "検索", class: "btn btn-outline-light my-2 my-sm-0" %>
<% end %>
