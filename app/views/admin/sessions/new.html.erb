<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header bg-dark text-white">
          <h4 class="px-2">管理者ログイン</h4>
        </div>

        <div class="card-body bg-light">
          <h5 class="mb-4">
            メールアドレスとパスワードを入力してください
          </h5>

          <%= render "shared/error_messages", object: resource %>

          <%= form_with scope: resource_name, url: session_path(resource_name), local: true do |f| %>
            <div class="form-group">
              <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class:"form-control", autocomplete: "current-password", placeholder: "パスワード" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="form-group form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "ログイン情報を保存する", class: "form-check-label" %>
              </div>
            <% end %>
            <div class="text-center">
              <%= f.submit "ログイン", class: "btn btn-primary btn-lg px-5" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <div>
</div>
